def average(numbers):
    if not numbers:
        return 0
    return sum(numbers) / len(numbers)

# Example usage
grades = [15, 18, 12, 14, 17]
avg = average(grades)
print(f"The average grade is: {avg:.2f}")
__________________________________________________________________


